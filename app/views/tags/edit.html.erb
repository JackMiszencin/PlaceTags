<h2>Update Tag<h2>

<%= form_for [@atlas, @tag] do |f| %>
	<div class = "control-group">
		<%= f.label :title %>
		<div class = "controls">
			<%= f.text_field :title %>
		</div>
	</div>	
	<div class = "control-group">
		<%= f.label :size %>
		<div class = "controls">
			<%= select "tag", "size_id", @sizes.collect {|s| [s.label, s.id]} %>
		</div>
	</div>
	<div class = "control-group">
		<%= f.label :lng %>
		<div class = "controls">
			<%= f.text_field :lng %>
		</div>
	</div>
	<div class = "control-group">
		<%= f.label :lat %>
		<div class = "controls">
			<%= f.text_field :lat %>
		</div>
	</div>
	<%= f.submit "Update Tag" %>

<% end %>