<% if user_signed_in? %>
	<h2>Welcome to PlaceTags</h2>
	<h3>Please select the atlas you want to work on</h3>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Created</th>
				<th>Destroy?</th>
			</tr>
		</thead>
			<% @atlases.each do |a| %>
				<tr>
					<td><%= link_to a.name, atlas_path(a) %> </td>
					<td><%= a.created_at.strftime("%B %d, %Y") %></td>
					<td><%= link_to "Destroy", a, method: :delete, data: { confirm: 'Are you sure?'}  %> </td>
				</tr>
			<% end %>
	</table>
	<br>
	<%= link_to "Create a new atlas", new_atlas_path %>
<% else %>
	<%= "Please " %>
	<%= link_to "sign in", new_user_session_path %>
<% end %>