<%= form_for @atlas do |f| %>
	<div class="control-group">
		<%= f.label :name, :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :name, :class => 'text_field' %>
		</div>
	</div>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<% i = 10 %>
	<%= f.fields_for :types do |t| %>
		<div class="control-group">
			<%= t.label :label, "Type " + i.to_s %>
				<div class="controls">
					<%= t.hidden_field :level, :value => i %>
					<%= t.text_field :label, :class => 'text_field' %>
				</div>
		</div>
		<% i -= 1 %>
	<% end %>
	<%= f.submit "Create Atlas" %>
<% end %>